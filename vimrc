set autoindent
set number
set cursorline
set noerrorbells
set belloff=all
set wrap
set ruler

set tabstop=4
set shiftwidth=4
set expandtab

" Remove shift O lag
set timeout timeoutlen=5000 ttimeoutlen=100

inoremap <S-Tab> <C-d>

" Atom colours taken from https://github.com/joshdick/onedark.vim
syntax on
colorscheme onedark
